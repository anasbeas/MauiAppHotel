<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.Views.HospedagemContratada"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="{StaticResource Gray600}">

    <VerticalStackLayout VerticalOptions="Center">

        <Label Text="Suíte Super Luxo"
               TextColor="{StaticResource Gray100}"
               FontFamily="GloriaHallelujahRegular"
               FontSize="50"
               HorizontalTextAlignment="Center"/>

        <Frame Margin="10">
            <HorizontalStackLayout>
                <HorizontalStackLayout>
                    <Label Text="Adultos: "/>
                    <Label Text="2" 
                           TextColor="{StaticResource Black}"  />
                </HorizontalStackLayout>

                <HorizontalStackLayout>
                    <Label Text="Crianças: "/>
                    <Label Text="1"
                           TextColor="{StaticResource Black}" />
                </HorizontalStackLayout>

            </HorizontalStackLayout>
        </Frame>

        <Frame Margin="10">
            <Grid ColumnDefinitions="*, *, *"
                  RowDefinitions="Auto, Auto">
                <Label Grid.Row="0" Grid.Column="0" Text="Check-in:" />
                <Label Grid.Row="0" Grid.Column="1" Text="Check-out:" />
                <Label Grid.Row="0" Grid.Column="2" Text="Estadia:" />

                <Label Grid.Row="1" Grid.Column="0" Text="15/11/2025" />
                <Label Grid.Row="1" Grid.Column="1" Text="20/11/2025" />
                <Label Grid.Row="1" Grid.Column="2" Text="5" />
            </Grid>
        </Frame>

        <Frame Margin="10">
            <VerticalStackLayout Spacing="10">
                <HorizontalStackLayout Spacing="8" HorizontalOptions="Start">
                    <Label Text="Valor Total: "/>
                    <Label Text="R$ 825,00"
                       TextColor="{StaticResource Black}" />
                </HorizontalStackLayout>


                <Button Text="Voltar"
                        HorizontalOptions="Center"
                        Clicked="Button_Clicked" />
            </VerticalStackLayout>
        </Frame>

    </VerticalStackLayout>
</ContentPage>