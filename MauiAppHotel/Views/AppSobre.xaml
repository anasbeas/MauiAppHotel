<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.Views.AppSobre"
             BackgroundColor="{StaticResource Gray600}">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="12" VerticalOptions="Start">
            <Label Text="Sobre o App"
                   FontFamily="GloriaHallelujahRegular"
                   FontSize="32"
                   TextColor="{StaticResource Gray100}" />

            <Frame Padding="16" CornerRadius="8" HasShadow="True">
                <VerticalStackLayout Spacing="8">
                    <Label Text="Cáculo de Diária" FontAttributes="Bold" FontSize="20" />
                    <Label Text="Desenvolvedor: Ana Beatriz" />
                    <Label Text="Ano: 2025" />
                    <Label Text="Descrição: Aplicativo de exemplo para cálculo de hospedagem e reservas." />
                </VerticalStackLayout>
            </Frame>

            <Button Text="Voltar" BackgroundColor="{StaticResource PrimaryDark}" Clicked="OnVoltarClicked" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>